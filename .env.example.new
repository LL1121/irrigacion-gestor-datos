# ============================================
# Django Settings - Malargüe DB
# ============================================

# ---------- CORE SETTINGS ----------
# IMPORTANTE: Cambiar estos valores en producción

# Django Debug Mode (NUNCA True en producción)
DEBUG=True

# Secret Key (generar uno nuevo con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=django-insecure-development-key-change-in-production

# Hosts permitidos (comma-separated)
# Desarrollo: localhost,127.0.0.1
# Producción: tu-dominio.com,www.tu-dominio.com,IP-del-servidor
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (comma-separated, incluir protocolo)
# Desarrollo: http://localhost:8000,http://127.0.0.1:8000
# Producción: https://tu-dominio.com,https://www.tu-dominio.com
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000


# ---------- DATABASE ----------
# PostgreSQL connection string
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME
# Desarrollo:
DATABASE_URL=postgresql://postgres:112129@localhost:5432/malargue_db
# Producción (ejemplo):
# DATABASE_URL=postgresql://malargue_user:STRONG_PASSWORD_HERE@localhost:5432/malargue_db


# ---------- REDIS CACHE ----------
# Redis connection string
# Formato: redis://[:PASSWORD@]HOST:PORT/DATABASE_NUMBER
REDIS_URL=redis://127.0.0.1:6379/1
# Con password (producción):
# REDIS_URL=redis://:YOUR_REDIS_PASSWORD@127.0.0.1:6379/1


# ---------- SECURITY SETTINGS ----------
# Activar en producción con HTTPS configurado

# Redirect HTTP to HTTPS
SECURE_SSL_REDIRECT=False

# Cookies solo por HTTPS
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# HTTP Strict Transport Security (HSTS)
# 31536000 = 1 año en segundos
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False


# ---------- ERROR MONITORING ----------
# Sentry DSN (opcional pero recomendado para producción)
# Registrarse en https://sentry.io y obtener DSN
# SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id


# ---------- EMAIL SETTINGS ----------
# Configuración para envío de emails (reseteo de passwords, notificaciones)

# Backend de email
# Desarrollo: django.core.mail.backends.console.EmailBackend
# Producción: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Configuration (solo para producción)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password-aqui
DEFAULT_FROM_EMAIL=notificaciones@malargue.com

# Nota Gmail: Usar "App Passwords" en vez de tu contraseña real
# https://myaccount.google.com/apppasswords


