# ==============================================================================
# PRODUCTION ENVIRONMENT VARIABLES - Irrigación Malargüe
# ==============================================================================
# IMPORTANT: Copy this file to .env and fill in the values
# NEVER commit .env to version control!
# ==============================================================================

# Django Core Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production-min-50-chars
ALLOWED_HOSTS=irrigacionmalargue.net,localhost,127.0.0.1

# CSRF Protection (Cloudflare Tunnel setup)
CSRF_TRUSTED_ORIGINS=https://irrigacionmalargue.net

# Database Configuration (Shared PostgreSQL: db_central)
DB_NAME=irrigacion_malargue_db
DB_USER=irrigacion_user
DB_PASSWORD=your-strong-database-password-here
DATABASE_URL=postgresql://irrigacion_user:your-strong-database-password-here@db_central:5432/irrigacion_malargue_db

# Redis Cache (Optional - if using shared Redis)
REDIS_URL=redis://redis_central:6379/1

# Security Settings (SSL handled by Cloudflare Tunnel)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Optional: Sentry (Error Tracking)
SENTRY_DSN=

# ==============================================================================
# DEPLOYMENT NOTES:
# ==============================================================================
# 1. This app runs behind Cloudflare Tunnel on localhost:8002
# 2. SSL/TLS is terminated at Cloudflare (app receives HTTP traffic)
# 3. Database host MUST be "db_central" (shared PostgreSQL container)
# 4. Port mapping: internal 8000 → external 8002
# 5. Network: shared_network (external Docker network)
# ==============================================================================
